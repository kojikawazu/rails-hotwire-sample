      <div class="mt-3 flex justify-center space-x-6">
        <% if AppConfig.twitter_url.present? %>
          <%= link_to AppConfig.twitter_url, 
            class: "text-[#94a3b8] hover:text-white transition-colors",
            target: "_blank",
