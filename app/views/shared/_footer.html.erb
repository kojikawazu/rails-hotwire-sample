        <% if AppConfig.github_url.present? %>
          <%= link_to AppConfig.github_url,
              class: "text-[#94a3b8] hover:text-white transition-colors",
              target: "_blank",
              rel: "noopener" do %>
            <i class="fab fa-github text-lg"></i>
          <% end %>
        <% end %>
      </div>
    </div>
