<div class="flex flex-col min-h-screen bg-[#0f172a]">
  <%= render "shared/header" %>

  <main class="flex-grow py-12 px-4">
    <div class="max-w-md mx-auto bg-[#1e293b] rounded-3xl shadow-2xl overflow-hidden border border-[#334155]">
      <div class="p-8">
        <h2 class="text-3xl font-bold text-white mb-6 font-roboto">TODOリスト</h2>
        
        <%= form_with(model: Task.new, class: "flex gap-3 mb-6", data: { controller: "form" }) do |f| %>
          <%= f.text_field :text,
              class: "flex-1 px-4 py-3 bg-[#334155] border-none text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-[#60a5fa] placeholder-[#94a3b8]",
              placeholder: "新しいタスクを入力",
              data: { 
                form_target: "input",
                action: "keypress->form#submitOnEnter"
              } %>
          
          <%= f.submit "追加",
              class: "px-6 py-3 bg-gradient-to-r from-[#60a5fa] to-[#a78bfa] text-white rounded-xl hover:opacity-90 transition-opacity font-medium" %>
        <% end %>

        <ul id="tasks" class="space-y-3">
          <%= render @tasks %>
        </ul>
      </div>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>